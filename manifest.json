{
    "name": "everything always somewhere",
    "version": "0.2",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "icons": {
      "48": "icons/rose48.png"
    },
    "browser_action": {
        "default_icon": "icons/rose-off.png"
    },
    "permissions": [
        "activeTab",
        "http://*/*",
        "storage",
        "contextMenus"
    ],
    "options_ui": {
      "page": "options.html",
      "chrome_style": true
    }
}
