{
    "name": "everything always somewhere",
    "version": "0.4",
    "manifest_version": 2,
    "description": "everything always somewhere is a browser extension that automatically cycles between websites created by Rafael Rozendaal",
    "author": "Erik Axel Eggeling, www.eraxeg.com",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "icons": {
      "48": "icons/rose48.png"
    },
    "browser_action": {
        "default_icon": "icons/rose-off.png"
    },
    "permissions": [
        "activeTab",
        "http://*/*",
        "storage",
        "contextMenus"
    ],
    "options_ui": {
      "page": "options.html",
      "chrome_style": true
    }
}
